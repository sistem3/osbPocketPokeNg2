{
  "name": "osb-pocket-poke",
  "version": "0.0.1",
  "description": "Angular JS 2 Component for displaying Pokemon trivia",
  "main": "OsbPocketPoke.js",
  "scripts": {
    "watch": "tsc -p src -w",
    "build": "npm run build-typescript && npm run build-css && npm run move-template && npm run move-fonts",
    "build-typescript": "rm -rf lib && tsc -p src",
    "build-css": "node-sass --include-path scss src/assets/scss/OsbPocketPoke.scss lib/OsbPocketPoke.css",
    "move-template": "copyfiles -f src/OsbPocketPoke.html lib",
    "move-fonts": "copyfiles -f src/assets/fonts/* lib/fonts"
  },
  "license": "MIT",
  "devDependencies": {
    "node-sass": "^3.7.0",
    "nodemon": "^1.9.2",
    "typescript": "^1.7.5"
  },
  "dependencies": {
    "@angular/common": "2.0.0-rc.1",
    "@angular/compiler": "2.0.0-rc.1",
    "@angular/core": "2.0.0-rc.1",
    "@angular/http": "2.0.0-rc.1",
    "@angular/platform-browser": "2.0.0-rc.1",
    "@angular/platform-browser-dynamic": "2.0.0-rc.1",
    "copyfiles": "^1.0.0",
    "rxjs": "5.0.0-beta.6",
    "scrollmagic": "^2.0.5",
    "zone.js": "^0.6.12"
  }
}
